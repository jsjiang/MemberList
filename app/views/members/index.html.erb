<div class="container margin-top-20">
	<div class="row">
		<div class="col-sm-12">
			<button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#add-member">Add Member</button>
		</div>
	</div>

<% @members.each do |member| %>
	<div class="row margin-top-20">
		<div class="col-sm-3">
			<img class="img-responsive img-circle" src="<%= member.avatar.url %>" />
		</div>
		<div class="col-sm-9">
			<h2 class="margin-top-40"><%= member.name %></h2>
		</div>
	</div>
<% end %>


</div>

<div id="add-member" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<%= form_for Member.new, url: members_path, html: { multiple: true} do |f| %>
			
			<div class="modal-header">
			    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title">Add Member</h4>
			</div>
				<div class="modal-body">
				<div class="bold">
					Member Name
				</div>
				<div class="margin-top-20">
					<%= f.text_field :name, class: "form-control", placeholder: "Member Name" %>
				</div>
				<div class="bold margin-top-20">
					Upload Photo
				</div>
				<div class="margin-top-20">
					<%= f.file_field :avatar, class: "form-control" %>
				</div>
			</div>
	
		
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="submit" class="btn btn-primary">Save Member</button>
			</div>
			
			<% end %> 
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->



